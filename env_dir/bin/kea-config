#!/usr/bin/env bash

usage()
{
    cat <<EOF
Usage: kea-config [OPTIONS]
Options:
     [--prefix]
     [--hgversion]
     [--version]
     [--libs]
     [--cflags]
     [--ldflags]
     [--includes]
     [--hdfincludes]
     [--hdfcflags]
     [--hdflibs]
EOF
    exit $1
}
if test $# -eq 0; then
  usage 1 1>&2
fi
while test $# -gt 0; do
case "$1" in
    -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
    *) optarg= ;;
esac
case $1 in
    --prefix)
    echo -n "/media/gpu/easystore/covid-mobility-tool/env_dir "
     ;;
    --hgversion)
    echo -n "289 "
     ;;
	--version)
    echo -n "1.4.7 "
     ;;
    --cflags)
    echo -n "-I/media/gpu/easystore/covid-mobility-tool/env_dir/include "
      ;;
    --libs)
      echo -n "-L/media/gpu/easystore/covid-mobility-tool/env_dir/lib -lkea "
      ;;
    --ldflags)
      echo -n "/media/gpu/easystore/covid-mobility-tool/env_dir/lib "
      ;;
    --includes)
      echo -n "/media/gpu/easystore/covid-mobility-tool/env_dir/include "
      ;;
	--hdfincludes)
      echo -n "/media/gpu/easystore/covid-mobility-tool/env_dir/include "
      ;;
	--hdfcflags)
      echo -n "-I/media/gpu/easystore/covid-mobility-tool/env_dir/include "
      ;;
	--hdflibs)
      echo -n "-L/media/gpu/easystore/covid-mobility-tool/env_dir/lib -lhdf5 -lhdf5_hl -lhdf5_cpp "
      ;;
  esac
  shift
done
echo
